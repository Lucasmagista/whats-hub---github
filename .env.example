# =============================
# WHATS-HUB + N8N INTEGRATION
# Environment Variables - FASE 1
# =============================

# =============================
# EMAIL CONFIGURATION (EXISTING)
# =============================
# Configuração do EmailJS para envio de relatórios
# Obtenha essas informações em: https://www.emailjs.com/

# Service ID do EmailJS (obtenha após configurar um serviço de email)
VITE_EMAILJS_SERVICE_ID=your_service_id_here

# Template ID do EmailJS (obtenha após criar um template)
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here

# Public Key do EmailJS (encontre em Account > API Keys)
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here

# Email de destino para os relatórios
VITE_RECIPIENT_EMAIL=suporte@seudominio.com

# =============================
# N8N INTEGRATION - NEW
# =============================
VITE_N8N_URL=http://localhost:5678
VITE_N8N_WEBHOOK_URL=http://localhost:5678/webhook/whatsapp-messages
VITE_N8N_SERVER_URL=http://localhost:3001

# =============================
# WHATSAPP SERVICE - NEW
# =============================
VITE_WHATSAPP_SERVER_URL=http://localhost:3001
VITE_WHATSAPP_WS_URL=ws://localhost:3001/ws

# =============================
# DASHBOARD - UPDATED
# =============================
VITE_DASHBOARD_URL=http://localhost:5173

# =============================
# DATABASE - NEW
# =============================
VITE_POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/whats_hub

# =============================
# API CONFIGURATION - UPDATED
# =============================
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# =============================
# FEATURES FLAGS - NEW
# =============================
VITE_ENABLE_AI=false
VITE_ENABLE_REAL_TIME_SYNC=true
VITE_ENABLE_WEBHOOKS=true
VITE_ENABLE_QUEUE_SYSTEM=true

# =============================
# AI CONFIGURATION (FASE 3) - NEW
# =============================
VITE_OPENAI_API_KEY=
VITE_CLAUDE_API_KEY=
VITE_AI_PROVIDER=openai
VITE_AI_MODEL=gpt-3.5-turbo

# =============================
# SECURITY - NEW
# =============================
VITE_WEBHOOK_SECRET=whats-hub-webhook-secret-2024
VITE_JWT_SECRET=whats-hub-jwt-secret-2024

# =============================
# MONITORING - NEW
# =============================
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL=info
VITE_ENABLE_METRICS=true

# =============================
# DEVELOPMENT - UPDATED
# =============================
VITE_APP_ENV=development
VITE_MOCK_API=false
VITE_DEBUG_MODE=true
VITE_SIMULATE_N8N=false
